<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_pack_tag "application", 'data-turbolinks-track': "reload" %>
  </head>

  <body>
  <%= render "layouts/header" %>
  <div class="container">
    <br/>
    <% if notice %>
      <%= render "layouts/alerts" %>
    <% end %>
    <%= yield %>
  </div>
  </body>
</html>
